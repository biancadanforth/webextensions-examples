{
  "hidden": true,
  "background": {
      "scripts": ["background.js"]
  },
  "browser_action": {
      "default_title": "Hidden WE with Options Page"
  },
  "description": "Hidden WebExtension with Options page example",
  "homepage_url": "https://github.com/biancadanforth/webextensions-examples/tree/master/hidden-with-options-page",
  "manifest_version": 2,
  "name": "Hidden with Options Page",
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },
  "permissions": [
    "storage"
  ],
  "version": "1.1",
  "applications": {
      "gecko": {
          "id": "hidden-with-options-page@mozilla.org",
          "strict_min_version": "57.0a1"
      }
  }
}