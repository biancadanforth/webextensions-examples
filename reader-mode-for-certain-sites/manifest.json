{
  "background": {
      "scripts": ["background.js"]
  },
  "browser_action": {
      "default_title": "Enable Reader Mode for List of Domains"
  },
  "description": "Automatically enables Reader Mode for a list of domains on page load through an Options page",
  "homepage_url": "https://github.com/biancadanforth/webextensions-examples/tree/master/reader-mode-for-certain-sites",
  "manifest_version": 2,
  "name": "Reader Mode for Certain Sites",
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "storage"
  ],
  "version": "1.2",
  "applications": {
    "gecko": {
      "id": "reader-mode-for-certain-sites@mozilla.org",
      "strict_min_version": "58.0a1"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "reader-mode-for-certain-sites@mozilla.org",
      "strict_min_version": "65.0"
    }
  }
}